<section id="testimonial" class="py-16 relative h-[400px] overflow-hidden">
  <!-- Contenedor de fondo con video en loop -->
  <div class="absolute inset-0 overflow-hidden">
    <video 
      autoplay 
      loop 
      muted 
      playsinline
      class="w-full h-full object-cover"
    >
      <source src="/boda.mp4" type="video/mp4" />
      <!-- Imagen de respaldo en caso de que el video no se cargue -->
      <img 
        src="/foto1.jpg" 
        alt="Wedding ceremony" 
        class="w-full h-full object-cover"
      />
    </video>
    <div class="absolute inset-0 bg-black opacity-60"></div>
  </div>
  
  <!-- Contenido del testimonio -->
  <div class="container mx-auto px-4 py-12 relative z-10 h-full flex items-center justify-center">
    <div class="max-w-3xl mx-auto text-center text-white">
      <blockquote>
        <p class="text-2xl md:text-3xl lg:text-4xl font-light leading-relaxed mb-6">
          "We love their creative and <span class="text-yellow-200">laid back</span> style. Best duo in the industry."
        </p>
        <footer class="text-sm tracking-widest uppercase">
          â€” Kenzie & JP
        </footer>
      </blockquote>
    </div>
  </div>
</section>
