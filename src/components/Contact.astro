---
import { Icon } from 'astro-icon/components';
---

<section id="contact" class="py-24 bg-white">
  <div class="container mx-auto px-6 max-w-screen-2xl">
    <h2 class="text-3xl md:text-4xl font-light mb-16 text-center">Contact</h2>
    
    <div class="grid md:grid-cols-2 gap-12">
      <div>
        <h3 class="text-xl font-light mb-6">Get in Touch</h3>
        <p class="text-gray-700 mb-8">
          I'd love to hear about your special day or project. Please fill out the form and I'll get back to you within 24 hours.
        </p>
        
        <div class="space-y-4">
          <div class="flex items-center">
            <Icon name="lucide:mail" class="w-5 h-5 mr-3 text-gray-500" />
            <a href="mailto:info@cassandraladru.com" class="text-gray-700 hover:text-gray-900">info@cassandraladru.com</a>
          </div>
          <div class="flex items-center">
            <Icon name="lucide:phone" class="w-5 h-5 mr-3 text-gray-500" />
            <a href="tel:+61412345678" class="text-gray-700 hover:text-gray-900">+61 412 345 678</a>
          </div>
          <div class="flex items-center">
            <Icon name="lucide:map-pin" class="w-5 h-5 mr-3 text-gray-500" />
            <span class="text-gray-700">Byron Bay, Australia</span>
          </div>
        </div>
        
        <div class="mt-8 flex space-x-4">
          <a href="#" aria-label="Instagram" class="text-gray-500 hover:text-gray-900">
            <Icon name="lucide:instagram" class="w-5 h-5" />
          </a>
          <a href="#" aria-label="Facebook" class="text-gray-500 hover:text-gray-900">
            <Icon name="lucide:facebook" class="w-5 h-5" />
          </a>
          <a href="#" aria-label="Pinterest" class="text-gray-500 hover:text-gray-900">
            <Icon name="lucide:image" class="w-5 h-5" />
          </a>
        </div>
      </div>
      
      <div>
        <form class="space-y-6">
          <div>
            <label for="name" class="block text-sm font-light text-gray-700 mb-1">Name</label>
            <input 
              type="text" 
              id="name" 
              name="name" 
              class="w-full px-4 py-2 border border-gray-300 focus:outline-none focus:ring-1 focus:ring-gray-400"
              required
            />
          </div>
          
          <div>
            <label for="email" class="block text-sm font-light text-gray-700 mb-1">Email</label>
            <input 
              type="email" 
              id="email" 
              name="email" 
              class="w-full px-4 py-2 border border-gray-300 focus:outline-none focus:ring-1 focus:ring-gray-400"
              required
            />
          </div>
          
          <div>
            <label for="event" class="block text-sm font-light text-gray-700 mb-1">Event Type</label>
            <select 
              id="event" 
              name="event" 
              class="w-full px-4 py-2 border border-gray-300 focus:outline-none focus:ring-1 focus:ring-gray-400"
              required
            >
              <option value="">Select an option</option>
              <option value="wedding">Wedding</option>
              <option value="engagement">Engagement</option>
              <option value="portrait">Portrait</option>
              <option value="fashion">Fashion</option>
              <option value="other">Other</option>
            </select>
          </div>
          
          <div>
            <label for="message" class="block text-sm font-light text-gray-700 mb-1">Message</label>
            <textarea 
              id="message" 
              name="message" 
              rows="4" 
              class="w-full px-4 py-2 border border-gray-300 focus:outline-none focus:ring-1 focus:ring-gray-400"
              required
            ></textarea>
          </div>
          
          <button 
            type="submit" 
            class="w-full py-3 bg-gray-900 text-white uppercase text-xs tracking-widest hover:bg-gray-800 transition-colors"
          >
            Send Message
          </button>
        </form>
      </div>
    </div>
  </div>
</section>
