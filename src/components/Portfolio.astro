---
const portfolioItems = [
  {
    title: "Charlie & Scott | Byron Bay",
    location: "Byron Bay",
    date: "11.11.18",
    photoCount: 68,
    mainImage: "/fotog4.jpg",
    images: [
      "/fotog1.jpg",
      "/fotog3.jpg",
      "/fotog5.jpg"
    ]
  },
  {
    title: "Emma & James | Sydney",
    location: "Sydney",
    date: "05.04.22",
    photoCount: 72,
    mainImage: "/fotog6.jpg",
    images: [
      "/fotog8.jpg",
      "/fotog7.jpg",
      "/fotog9.jpg"
    ]
  }
];
---

<section id="portfolio" class="py-24 bg-gray-50">
  <div class="container mx-auto px-6 max-w-screen-2xl">
    <h2 class="text-3xl md:text-4xl font-light mb-16 text-center">Portfolio</h2>
    
    {portfolioItems.map((item, index) => (
      <div class="mb-32 last:mb-0">
        <div class="uppercase text-xs tracking-widest text-center mb-6">
          <span>Portfolio Highlight</span>
        </div>
        
        <h3 class="text-2xl md:text-3xl font-light text-center mb-16">{item.title}</h3>
        
        <div class="grid grid-cols-12 gap-4 md:gap-8">
          <div class="col-span-12 md:col-span-4 lg:col-span-3">
            <img 
              src={item.images[0] || "/placeholder.svg"} 
              alt="Wedding photography" 
              class="w-full h-auto object-cover aspect-[3/4]"
            />
          </div>
          
          <div class="col-span-12 md:col-span-4 lg:col-span-6">
            <img 
              src={item.mainImage || "/placeholder.svg"} 
              alt="Wedding invitation" 
              class="w-full h-auto object-cover"
            />
          </div>
          
          <div class="col-span-12 md:col-span-4 lg:col-span-3 flex flex-col justify-between">
            <div class="text-center mb-8">
              <span class="text-6xl font-light block mb-2">{item.photoCount}</span>
              <span class="uppercase text-xs tracking-widest">Photos</span>
            </div>
            
            <a 
              href="#" 
              class="border border-gray-300 text-center py-4 uppercase text-xs tracking-widest hover:bg-gray-100 transition-colors"
            >
              View Gallery
            </a>
          </div>
          
          <div class="col-span-12 md:col-span-6 mt-8">
            <img 
              src={item.images[1] || "/placeholder.svg"} 
              alt="Wedding venue" 
              class="w-full h-auto object-cover aspect-video"
            />
          </div>
          
          <div class="col-span-12 md:col-span-6 mt-8">
            <img 
              src={item.images[2] || "/placeholder.svg"} 
              alt="Wedding photography" 
              class="w-full h-auto object-cover aspect-video"
            />
          </div>
        </div>
      </div>
    ))}
  </div>
</section>
