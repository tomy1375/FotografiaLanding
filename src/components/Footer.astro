---
import { Icon } from 'astro-icon/components';
const currentYear = new Date().getFullYear();
---

<footer class="py-8 bg-gray-100 text-gray-600 text-sm">
  <div class="container mx-auto px-6">
    <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
      <!-- Izquierda: Copyright -->
      <div class="text-center md:text-left">
        <p>&copy; {currentYear} Cassandra Ladru Photography. All rights reserved.</p>
      </div>
      
      <!-- Centro: CrÃ©ditos -->
      <div class="text-center">
        <p class="text-gray-500 text-sm font-light">
          Creado por <a href="https://zenithstudio.site/" class="text-gray-800 hover:text-gray-600 transition-colors duration-300">ZenithStudio</a>
        </p>
      </div>
      
      <!-- Derecha: Redes sociales -->
      <div class="flex space-x-4 items-center">
        <a href="#" aria-label="Instagram" class="text-gray-500 hover:text-gray-800 transition-colors">
          <Icon name="lucide:instagram" class="w-5 h-5" />
        </a>
        <a href="#" aria-label="Facebook" class="text-gray-500 hover:text-gray-800 transition-colors">
          <Icon name="lucide:facebook" class="w-5 h-5" />
        </a>
        <a href="#" aria-label="Pinterest" class="text-gray-500 hover:text-gray-800 transition-colors">
          <Icon name="lucide:image" class="w-5 h-5" />
        </a>
      </div>
    </div>
  </div>
</footer>
